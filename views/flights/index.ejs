<!DOCTYPE html>
<html>
    <%- include('../partials/head') %>
    <body>
        <%- include('../partials/header') %>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">Departs</th>
                    <th scope="col">Flight Number</th>
                    <th scope="col">Airline</th>
                    <th scope="col">Airport</th>
                </tr>
            </thead>
            <% orderFlights = flights.sort((a,b) => a.departs - b.departs) %>
            <% orderFlights.forEach(function(flight) { %>
            <tbody>
                <tr class="clickable-row" data-href="/flights/<%= flight._id%>">
                        <td><%= flight.departs %></td>
                        <td><%= flight.flightNo %></td>
                        <td><%= flight.airline %></td>
                        <td><%= flight.airport %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>

        <form action="/flights/new">
            <input class="btn btn-primary" type="submit" value="Add New Flight" />
        </form>

        <%- include('../partials/footer') %>
    </body>
</html>